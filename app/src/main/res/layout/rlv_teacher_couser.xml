        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_167"
            android:layout_marginTop="@dimen/dp_108"
            android:src="@mipmap/wubi" />

        <TextView
            android:id="@+id/rlv_teacher_couser_courseTag"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_20"
            android:textColor="@color/cl_ff7b00"
            android:textSize="@dimen/sp_9"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:background="@drawable/shape_appraise"
            android:text="芭蕾舞" />

        <TextView
            android:id="@+id/rlv_teacher_couser_courseName"
            android:layout_width="@dimen/dp_172"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_16"
