        <TextView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_60"
            android:text="今天20:00开课"
            android:textColor="@color/cl_c2c0be"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/rlv_teacher_couser_username"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_43"
            android:layout_marginTop="@dimen/dp_83"
            android:text="李妍"
            android:textColor="@color/cl_231304"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/rlv_teacher_couser_amount"
            android:layout_width="@dimen/dp_63"
            android:layout_height="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_111"
            android:text="42568人已报名"
            android:textColor="@color/cl_c2c0be"
            android:textSize="@dimen/sp_9" />

        <TextView
            android:id="@+id/rlv_teacher_couser_price"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_131"
            android:layout_marginTop="@dimen/dp_109"
            android:text="9499"
            android:textColor="@color/cl_c2c0be"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/wu_price"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_187"
            android:layout_marginTop="@dimen/dp_103"
            android:text="6499"
            android:textColor="@color/cl_ffc400"
            android:textSize="@dimen/sp_18" />
