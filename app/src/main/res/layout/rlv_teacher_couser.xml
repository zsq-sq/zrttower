        <Button
            android:id="@+id/atonce_apply"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_247"
            android:layout_marginTop="@dimen/dp_103"
            android:background="@drawable/shape_submit"
            android:gravity="center"
            android:text="@string/Immediatelyapply"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:id="@+id/rlv_teacher_couser_headimg"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_81"
