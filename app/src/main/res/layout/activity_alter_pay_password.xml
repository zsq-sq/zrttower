<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AlterPayPasswordActivity">
    <com.example.arttower.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backImage="@drawable/back_icon"
        app:canBack="true"
        app:titleText="支付密码"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="@dimen/dp_99"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_141"
        android:text="请输入新手机号"
        android:textColor="#C2C0BE"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/area"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_175"
        android:text="+86"
        android:textSize="@dimen/sp_18" />

    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_175"
        android:src="@mipmap/ic_jiantou_right" />
    <EditText

        android:layout_width="@dimen/dp_189"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_74"
        android:background="@drawable/shape_login_edit"
        android:hint="请输入手机号"
        android:cursorVisible="true"
        android:layout_marginTop="@dimen/dp_163"
        android:textCursorDrawable="@drawable/test_cursor"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="#E4E1DE"
        android:inputType="number"
        android:maxLength="11"/>
    <Button
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_170"
        android:background="@drawable/shape_submit"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />


    <TextView
        android:layout_width="@dimen/dp_84"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_242"
        android:text="请输入验证码"
        android:textColor="@color/cl_c2c0be" />

    <EditText
        android:layout_width="@dimen/dp_343"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@drawable/shape_login_edit"
        android:hint="请输入验证码"
        android:cursorVisible="true"
        android:layout_marginTop="@dimen/dp_265"
        android:textCursorDrawable="@drawable/test_cursor"
        android:textColor="@color/black"
        android:textColorHint="#E4E1DE"
        android:inputType="number"
        android:maxLength="6"/>
    <Button
        android:id="@+id/alterzhifu_next"
        android:layout_width="@dimen/dp_311"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="591dp"
        android:layout_marginRight="@dimen/dp_32"
        android:background="@drawable/shape_submit"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />


</RelativeLayout>