<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_margin="@dimen/dp_10"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/jinghao" />
    <TextView
        android:id="@+id/label_querytext"
        android:layout_width="wrap_content"
        android:text="桃李芬芳"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_height="@dimen/dp_20"/>
</LinearLayout>

    <TextView
        android:id="@+id/label_num_dynamic"
        android:layout_width="@dimen/dp_80"
        android:textSize="@dimen/sp_12"
        android:text="3698条动态"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/cl_c2c0be"
       android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/shape_dongtai"
        android:layout_height="@dimen/dp_24"/>
</RelativeLayout>