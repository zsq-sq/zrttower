<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f8f8f8"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/buyer_covermg"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="@dimen/dp_182"
            android:background="@mipmap/coursebitmp" />

        <ImageView
            android:id="@+id/buy_return"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@mipmap/returnwith" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_209"
            android:layout_marginRight="@dimen/dp_16"
            android:src="@mipmap/iconcollect" />

        <TextView
            android:id="@+id/buyer_teacher_coucser_content"
            android:layout_width="@dimen/dp_319"
            android:layout_height="@dimen/dp_62"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_245"
            android:text="课程简介课程简介课程简介课程简介课程简介课程简介"
            android:textColor="@color/cl_333333"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/buyer_teacher_coucser_name"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_33"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="@dimen/dp_209"
            android:text="课程名称"
            android:textColor="@color/cl_231304"
            android:textSize="@dimen/dp_23" />

        <com.example.arttower.design.StarBar
            android:id="@+id/buy_teacher_star"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_320"
            android:layout_marginBottom="@dimen/dp_10"
            app:starCount="5"
            app:starDistance="@dimen/dp_4"
            app:starEmpty="@mipmap/start_off"
            app:starFill="@mipmap/start_on"
            app:starSize="@dimen/dp_16" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_93"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/buy_teacger_img"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/touxiang2" />
        <TextView
            android:id="@+id/buyer_idCardName"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_52"
            android:layout_marginTop="@dimen/dp_14"
            android:text="教师名"
            android:textColor="@color/text_goldRing"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/buy_guanzhu"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_280"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/shape_submit"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />
            <TextView
                android:id="@+id/buyer_introduction"
                android:layout_width="@dimen/dp_243"
                android:layout_marginTop="@dimen/dp_39"
                android:layout_marginLeft="@dimen/dp_50"
                android:text="教师简介教师简介教师简介教师简介教师简介"
                android:textColor="@color/cl_666666"
                android:textSize="@dimen/dp_16"
                android:layout_height="@dimen/dp_46"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_110"
            android:background="@color/white"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="@dimen/dp_88"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/cl_333333"
            android:text="课程评价"
            android:layout_height="@dimen/dp_30"/>



            <ImageView
                android:id="@+id/buy_couser_headimg"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_54"
                />

    <TextView
        android:id="@+id/buyer_idCard"
        android:layout_width="@dimen/dp_54"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_52"

        android:textColor="@color/text_four"
        android:textSize="@dimen/sp_18"
        android:layout_height="@dimen/dp_25"/>

            <TextView
                android:id="@+id/buyer_remark"
                android:layout_width="@dimen/dp_315"
                android:textSize="@dimen/sp_15"
                android:layout_marginTop="@dimen/dp_84"
                android:layout_marginLeft="@dimen/dp_44"
                android:textColor="@color/text_goldRing"
                android:layout_height="@dimen/dp_54"/>
            
        </RelativeLayout>
    </RelativeLayout>
        

<LinearLayout
    android:layout_width="match_parent"
   android:orientation="horizontal"
    android:layout_height="@dimen/dp_46">
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="价格:"
        android:textColor="@color/text_goldRing"
        android:textSize="@dimen/sp_15"
        android:layout_height="@dimen/dp_22"/>
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_26"
        android:src="@mipmap/wubi"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_height="@dimen/dp_16"/>
    <TextView
        android:id="@+id/buyer_price"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:text="199"
        android:textColor="@color/cl_ff7b00"
        android:textSize="@dimen/sp_22"
        android:layout_height="@dimen/dp_30"/>

    <Button
        android:id="@+id/buyer_shiting"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/switc_button_open"
        android:gravity="center"
        android:text="试听课程"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
    <Button
        android:id="@+id/promptly_buyer"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/switc_button_open"
        android:gravity="center"
        android:text="@string/buy"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>

</LinearLayout>