<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AlterPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:orientation="horizontal"
        android:background="@color/cl_ff7b00">

        <ImageView
            android:id="@+id/alter_return"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/jc_back_normal"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15" />
<TextView
    android:layout_width="@dimen/dp_90"
    android:textSize="@dimen/sp_18"
    android:text="修改手机号"
    android:textColor="@color/white"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dp_70"
    android:layout_height="@dimen/dp_25"/>
    </LinearLayout>

    <TextView
        android:layout_width="@dimen/dp_98"
        android:textColor="@color/cl_c2c0be"
        android:text="请输入新的手机号"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_height="@dimen/dp_20"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_150"
    android:layout_height="@dimen/dp_30">
<TextView
    android:textSize="@dimen/sp_18"
    android:textColor="@color/cl_4d4c4b"
    android:text="+86"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_width="@dimen/dp_32"
    android:layout_height="@dimen/dp_25"/>
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:src="@mipmap/ic_jiantou_right"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="@dimen/dp_24"/>
    <EditText
        android:id="@+id/alter_ed_phone"
        android:layout_width="@dimen/dp_150"
        android:hint="请输入新的手机号"
        android:layout_height="@dimen/dp_40"/>
    <Button
        android:id="@+id/alter_gain_code"
        android:layout_width="@dimen/dp_80"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_30"
        android:background="@drawable/shape_mine_img"
        android:layout_height="@dimen/dp_24"/>
</LinearLayout>
    <TextView
        android:layout_width="@dimen/dp_84"
        android:textColor="@color/cl_c2c0be"
        android:text="请输入验证码"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_207"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_height="@dimen/dp_20"/>


    <EditText
        android:id="@+id/alter_ed_code"
        android:layout_width="match_parent"
        android:hint="123456"
        android:layout_marginTop="@dimen/dp_230"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_height="@dimen/dp_40"/>



    <Button
        android:id="@+id/alter_button_next"
        android:layout_width="@dimen/dp_300"
        android:text="下一步"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_400"
        android:background="@drawable/shape_submit"
        android:layout_height="@dimen/dp_44"/>

</RelativeLayout>