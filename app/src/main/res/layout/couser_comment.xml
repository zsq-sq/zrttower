<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f8f8f8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">

        <ImageView
            android:id="@+id/couser_comment_headimg"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@mipmap/wubi"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            />
        
        <TextView
            android:id="@+id/couser_comment_name"
            android:layout_width="wrap_content"
            android:text="康明那"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@+id/couser_comment_headimg"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="5dp"
            android:layout_height="@dimen/dp_20"/>

        <!--<TextView
            android:id="@+id/couser_comment_zannum"
            android:layout_width="wrap_content"
            android:textColor="@color/cl_c2c0be"
            android:layout_marginLeft="@dimen/dp_180"
            android:textSize="@dimen/sp_14"
            android:text="2.36W"
            android:layout_marginTop="@dimen/dp_26"
            android:layout_height="@dimen/dp_20"/>-->
    </RelativeLayout>
    <TextView
        android:id="@+id/couser_comment_count"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_48"
        android:text="突然，她从窗口旋风般地转过身来站在壁镜前面。她两眼晶莹透亮。"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/cl_231304"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:background="@color/cl_f4f4f4"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/couser_comment_rlv"
        android:layout_marginLeft="@dimen/dp_48"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_height="wrap_content"/>
</LinearLayout>