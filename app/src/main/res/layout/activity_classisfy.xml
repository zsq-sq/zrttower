<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CoursePage.view.tabfragmetn.ClassisfyActivity">

    <com.example.arttower.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sousuo"
        app:backImage="@drawable/back_icon"
        app:canBack="true"
        app:titleText="@string/classisfy"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/sousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_24"
            android:text="完成"
            android:textColor="#ffffff" />
    </com.example.arttower.design.CommonTitle>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:text="现有分类"
        android:textColor="#000000"
        android:textSize="@dimen/dp_14"/>

    <com.example.arttower.fragment.CoursePage.view.tabfragmetn.XCFlowLayout
        android:id="@+id/flowlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>