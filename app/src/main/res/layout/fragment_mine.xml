<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragment.MinePage.MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_92"
            android:background="@color/app_theme_color">

            <TextView
                android:id="@+id/tx_wd"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_33"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_164"
                android:layout_marginTop="@dimen/dp_42"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_24" />

            <ImageView
                android:id="@+id/xiaoxi"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_91"
                android:layout_marginTop="@dimen/dp_46"
                android:layout_toRightOf="@id/tx_wd"
                android:src="@mipmap/ic_xiaoxi" />

            <ImageView
                android:id="@+id/iv_set"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_46"
                android:layout_toRightOf="@id/xiaoxi"
                android:src="@mipmap/ic_setting" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/ic_mine_head"
                            android:layout_width="@dimen/dp_70"
                            android:layout_height="@dimen/dp_70"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@drawable/touxiang" />

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_28"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_23"
                            android:layout_toRightOf="@id/ic_mine_head"
                            android:text="用户名称"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_20" />

                        <TextView
                            android:id="@+id/tx_wubi"
                            android:layout_width="@dimen/dp_36"
                            android:layout_height="@dimen/dp_17"
                            android:layout_below="@id/user_name"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_toRightOf="@id/ic_mine_head"
                            android:text="舞币："
                            android:textColor="@color/cl_666666"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/mine_wubi"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_20"
                            android:layout_below="@id/user_name"
                            android:layout_marginTop="@dimen/dp_7"
                            android:layout_toRightOf="@id/tx_wubi"
                            android:text="999"
                            android:textColor="@color/cl_666666" />

                <TextView
                    android:id="@+id/tx_balance"
                    android:layout_width="@dimen/dp_36"
                    android:layout_height="@dimen/dp_17"
                    android:layout_below="@id/user_name"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@id/mine_wubi"
                    android:text="余额："
                    android:textColor="@color/cl_666666"
                    android:textSize="@dimen/sp_12"/>

                        <TextView
                            android:id="@+id/mine_balance"
                            android:layout_width="@dimen/dp_25"
                            android:layout_height="@dimen/dp_20"
                            android:layout_below="@id/user_name"
                            android:layout_marginTop="@dimen/dp_7"
                            android:layout_toRightOf="@id/tx_balance"
                            android:text="999"
                            android:textColor="@color/cl_666666" />

                        <TextView
                            android:id="@+id/tv_shengwang"
                            android:layout_width="@dimen/dp_104"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginLeft="@dimen/dp_16"
                            android:layout_marginTop="@dimen/dp_25"
                            android:layout_toRightOf="@id/user_name"
                            android:background="@drawable/shenwang_shape"
                            android:gravity="center"
                            android:text="声望：23333"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_42"
                        android:layout_marginTop="@dimen/dp_25"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rl_guanzhu"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/num_guanzhu"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_22"
                                android:layout_marginLeft="@dimen/dp_61"
                                android:text="999"
                                android:textColor="@color/cl_333333"
                                android:textSize="@dimen/sp_16" />

                            <ImageView
                                android:id="@+id/ic_gz"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_below="@id/num_guanzhu"
                                android:layout_marginLeft="@dimen/dp_55"
                                android:src="@mipmap/ic_gz" />

                            <TextView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_17"
                                android:layout_below="@id/num_guanzhu"
                                android:layout_toRightOf="@id/ic_gz"
                                android:text="关注"
                                android:textColor="@color/cl_666666"
                                android:textSize="@dimen/sp_12" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_32"
                            android:background="@color/cl_f2f2f2" />

                        <RelativeLayout
                            android:id="@+id/rl_fensi"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/num_fensi"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_22"
                                android:layout_marginLeft="@dimen/dp_38"
                                android:text="999"
                                android:textColor="@color/cl_333333"
                                android:textSize="@dimen/sp_16" />

                            <ImageView
                                android:id="@+id/ic_fs"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_below="@id/num_fensi"
                                android:layout_marginLeft="@dimen/dp_32"
                                android:src="@mipmap/ic_fs" />

                            <TextView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_17"
                                android:layout_below="@id/num_fensi"
                                android:layout_toRightOf="@id/ic_fs"
                                android:text="粉丝"
                                android:textColor="@color/cl_666666"
                                android:textSize="@dimen/sp_12" />
                        </RelativeLayout>

                        <ImageView
                            android:layout_width="@dimen/dp_1"
                            android:layout_height="@dimen/dp_30"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_32"
                            android:background="@color/cl_f2f2f2" />

                        <RelativeLayout
                            android:id="@+id/rl_dongtai"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/num_dongtai"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_22"
                                android:layout_marginLeft="@dimen/dp_38"
                                android:text="999"
                                android:textColor="@color/cl_333333"
                                android:textSize="@dimen/sp_16" />

                            <ImageView
                                android:id="@+id/ic_dt"
                                android:layout_width="@dimen/dp_16"
                                android:layout_height="@dimen/dp_16"
                                android:layout_below="@id/num_dongtai"
                                android:layout_marginLeft="@dimen/dp_32"
                                android:src="@mipmap/ic_dt" />

                            <TextView
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_17"
                                android:layout_below="@id/num_dongtai"
                                android:layout_toRightOf="@id/ic_dt"
                                android:text="动态"
                                android:textColor="@color/cl_666666"
                                android:textSize="@dimen/sp_12" />
                        </RelativeLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_8"
                        android:background="@color/cl_f8f8f8" />

                    <com.youth.banner.Banner
                        android:id="@+id/wd_banner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_114"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:background="@mipmap/minebanner" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4"
                    android:background="@color/cl_f8f8f8" />

                <include layout="@layout/wd_include" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>