<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cl_f4f4f4"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.MoneyChongActivity">
    <com.example.arttower.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backImage="@drawable/back_icon"
        app:canBack="true"
        app:titleText="舞币" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/cl_ff7b00"
        android:layout_height="@dimen/dp_100">
        <TextView
            android:id="@+id/shengdwubi"
            android:layout_width="@dimen/dp_48"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="可用舞币"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="@dimen/dp_17"/>
        <ImageView
            android:layout_width="@dimen/dp_16"
            android:background="@mipmap/yesshow"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/shengdwubi"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_height="@dimen/dp_16"/>
        
        <TextView
            android:id="@+id/lingqian"
            android:layout_width="@dimen/dp_24"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="零钱"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_204"
            android:layout_height="@dimen/dp_17"/>

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:background="@mipmap/yesshow"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toRightOf="@+id/lingqian"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_height="@dimen/dp_16"/>
        <TextView
            android:layout_width="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_height="@dimen/dp_64"/>

        <TextView
            android:id="@+id/wubi_num"
            android:layout_width="wrap_content"
            android:text="2333"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/white"
            android:layout_alignLeft="@id/shengdwubi"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_height="@dimen/dp_29"/>
<TextView
    android:layout_width="wrap_content"
    android:text="舞币"
    android:textSize="@dimen/sp_12"
    android:textColor="@color/white"
    android:layout_toRightOf="@id/wubi_num"
    android:layout_alignBottom="@id/wubi_num"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_height="@dimen/dp_17"/>

        <TextView
            android:id="@+id/lingqian_num"
            android:layout_width="wrap_content"
            android:text="2333"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/white"
            android:layout_alignLeft="@id/lingqian"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_height="@dimen/dp_29"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:text="元"
            android:layout_toRightOf="@id/lingqian_num"
            android:layout_alignBottom="@id/lingqian_num"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"/>


    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_height="@dimen/dp_42">
<TextView
    android:layout_width="@dimen/dp_72"
    android:text="充值明细"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/dp_16"
    android:textSize="@dimen/sp_18"
    android:textColor="@color/black"
    android:layout_height="@dimen/dp_25"/>
<ImageView
    android:layout_width="@dimen/dp_24"
    android:layout_gravity="center_vertical"
    android:background="@mipmap/ic_jiantou_right"
    android:layout_marginLeft="@dimen/dp_230"
    android:layout_height="@dimen/dp_24"/>
</LinearLayout>

    
    <Button
        android:id="@+id/up_lijirecharge"
        android:layout_width="@dimen/dp_311"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_submit"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_100"
        android:textSize="@dimen/sp_18"
        android:text="立即充值"
        android:layout_height="@dimen/dp_44"/>
</LinearLayout>