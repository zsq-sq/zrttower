<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.MinePage.view.AlterPasswordActivity">

    <com.example.arttower.design.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backImage="@drawable/back_icon"
        app:canBack="true"
        app:titleText="修改密码" />

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/cl_c2c0be"
        android:text="请输入旧密码"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_height="@dimen/dp_20"/>

    <EditText
        android:id="@+id/alter_password_oldPassword"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_14"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_32"
        android:background="@drawable/shape_login_edit"
        android:hint="* * * * * * *"
        android:cursorVisible="true"
        android:password="true"
        android:textCursorDrawable="@drawable/test_cursor"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="#E4E1DE"
        android:maxLength="12"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/cl_c2c0be"
        android:text="请设置新的密码"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_height="@dimen/dp_20"/>


    <EditText
        android:id="@+id/alter_password_newPassword"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_14"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_32"
        android:background="@drawable/shape_login_edit"
        android:hint="* * * * * * *"
        android:cursorVisible="true"
        android:password="true"
        android:textCursorDrawable="@drawable/test_cursor"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="#E4E1DE"
        android:maxLength="12"/>
    <TextView
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/cl_c2c0be"
        android:text="再次输入新的密码"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_height="@dimen/dp_20"/>

    <EditText
        android:id="@+id/alter_password_eq_newPassword"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_14"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_32"
        android:background="@drawable/shape_login_edit"
        android:hint="* * * * * * *"
        android:cursorVisible="true"
        android:password="true"
        android:textCursorDrawable="@drawable/test_cursor"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/black"
        android:textColorHint="#E4E1DE"
        android:maxLength="12"/>
    <Button
        android:id="@+id/alter_password_subit"
        android:layout_width="@dimen/dp_298"
        android:layout_height="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@drawable/shape_submit"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18" />
</LinearLayout>