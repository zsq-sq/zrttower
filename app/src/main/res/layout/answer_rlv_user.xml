<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/answer_user_headimg"
        android:layout_width="@dimen/dp_24"
        android:src="@drawable/touxiang"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_height="@dimen/dp_24"/>
    <TextView
        android:id="@+id/answer_user_name"
        android:layout_width="@dimen/dp_24"
        android:text="李妍"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/cl_231304"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_height="@dimen/dp_17"/>
    <TextView
        android:id="@+id/answer_user_content"
        android:layout_width="@dimen/dp_315"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_12"
        android:text="在跳芭蕾之前先做准备活动让身体放松下来，其次在线下多多练习相关的姿势。"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_height="@dimen/dp_38"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/answer_teacger_rlv"
        android:layout_width="@dimen/dp_315"
        android:layout_marginLeft="@dimen/dp_44"
        android:background="@color/cl_f4f4f4"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_91"
        android:layout_height="wrap_content"/>

    <LinearLayout
       android:layout_below="@id/answer_teacger_rlv"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="@dimen/dp_29"
        android:text="6月4日"
        android:textSize="@dimen/sp_9"
        android:textColor="@color/cl_c2c0be"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_height="@dimen/dp_13"/>
    <ImageView
        android:layout_width="@dimen/dp_16"
        android:src="@mipmap/xiaoxi"
       android:layout_marginLeft="@dimen/dp_200"
        android:layout_height="@dimen/dp_16"/>

    <TextView
        android:layout_width="@dimen/dp_16"
        android:text="999"
        android:textColor="@color/cl_c2c0be"
        android:textSize="@dimen/sp_9"
        android:layout_height="@dimen/dp_13"/>


    <ImageView
        android:layout_width="@dimen/dp_16"
        android:src="@mipmap/ic_dianzanhou"
        android:layout_height="@dimen/dp_16"/>
    <TextView
        android:layout_width="@dimen/dp_16"
        android:text="999"
        android:textColor="@color/cl_c2c0be"
        android:textSize="@dimen/sp_9"
        android:layout_height="@dimen/dp_13"/>
    </LinearLayout>

</RelativeLayout>