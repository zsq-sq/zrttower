<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_154"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16"
    android:layout_marginTop="@dimen/dp_10"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_local">

    <ImageView
        android:id="@+id/img_teacher"
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_154"
        android:layout_marginLeft="@dimen/dp_8"
        android:scaleType="fitXY"
        android:src="@mipmap/presonj" />

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/img_teacher"
        android:text="康明娜"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/teacher_merit1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/teacher_name"
        android:background="@drawable/shape_rlv_local_item"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="公立学校名师"
        android:textColor="@color/cl_ff7b00"
        android:textSize="@dimen/sp_9" />

    <TextView
        android:id="@+id/teacher_merit2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/teacher_merit1"
        android:background="@drawable/shape_rlv_local_item"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:text="提分迅速"
        android:textColor="@color/cl_ff7b00"
        android:textSize="@dimen/sp_9" />

    <TextView
        android:id="@+id/teacher_academy"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_17"
        android:layout_below="@id/teacher_name"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toRightOf="@id/img_teacher"
        android:text="上海戏剧学院"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/teacher_degree"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_17"
        android:layout_below="@id/teacher_name"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toRightOf="@id/teacher_academy"
        android:text="硕士"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/teacher_introduce"
        android:layout_width="@dimen/dp_213"
        android:layout_height="@dimen/dp_39"
        android:layout_below="@id/teacher_academy"
        android:layout_marginLeft="@dimen/dp_8"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_toRightOf="@id/img_teacher"
        android:text="教学经验丰富，深谙舞蹈考级动向，百余名学生考入北京舞蹈学院"
        android:textColor="@color/cl_231304"
        android:textSize="@dimen/sp_12" />

    <com.example.arttower.design.StarBar
        android:id="@+id/teacher_star"
        android:layout_width="@dimen/dp_96"
        android:layout_height="@dimen/dp_16"
        app:starCount="5"

        app:starSize="@dimen/dp_16"
        app:starDistance="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_8"
        app:starFill="@mipmap/start_on"
        app:starEmpty="@mipmap/start_off"
        android:layout_below="@id/teacher_introduce"
        android:layout_toRightOf="@id/img_teacher"

        />
</RelativeLayout>