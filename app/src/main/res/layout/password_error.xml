<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_200"
    android:layout_height="@dimen/dp_108"
    android:orientation="vertical">

    <TextView
        android:layout_width="@dimen/dp_112"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_24"
        android:text="密码错误，请重试"
        android:textColor="@color/cl_4d4c4b"
        android:textSize="@dimen/sp_14" />
<TextView
    android:layout_width="match_parent"
    android:background="@color/cl_f2f2f2"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_height="@dimen/dp_2"/>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/password_forgetps"
        android:layout_width="@dimen/dp_0"
        android:textColor="@color/cl_4d4c4b"
        android:textSize="@dimen/sp_14"
        android:text="忘记密码"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"/>
<TextView
    android:layout_width="@dimen/dp_2"
    android:background="@color/cl_f2f2f2"
    android:layout_height="match_parent"/>

  <TextView
      android:id="@+id/password_tautology"
        android:layout_width="@dimen/dp_0"
        android:textColor="@color/cl_ff7b00"
        android:textSize="@dimen/sp_14"
        android:text="重试"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="match_parent"/>

</LinearLayout>
</LinearLayout>