<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.CoursePage.CourseFragment">
    <ImageView
        android:id="@+id/course_guangao"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_242"
        android:background="@drawable/course_zwt"
        android:fitsSystemWindows="true"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_274"
        android:id="@+id/rl_course1"
        >
            <LinearLayout
                android:layout_width="@dimen/dp_329"
                android:layout_height="@dimen/dp_32"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_60"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/course_search_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_132"
                    android:src="@drawable/search" />

                <TextView
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_22"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="搜索"
                    android:textColor="@color/cl_ffe4e1de"
                    android:textSize="@dimen/sp_16" />
            </LinearLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_287"
            android:layout_height="@dimen/dp_81"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_course">

            <ImageView
                android:id="@+id/img_kechengku"
                android:layout_width="@dimen/dp_37"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_16"
                android:src="@mipmap/fufeike" />

            <TextView
                android:id="@+id/txt_kck"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_below="@id/img_kechengku"
                android:layout_marginLeft="@dimen/dp_26"
                android:layout_marginTop="@dimen/dp_4"
                android:text="课程库"
                android:textColor="@color/cl_231304"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/img_huodongke"
                android:layout_width="@dimen/dp_37"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_29"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_toRightOf="@id/img_kechengku"
                android:src="@mipmap/jinqihuodong" />

            <TextView
                android:id="@+id/txt_hdk"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_below="@id/img_huodongke"
                android:layout_marginLeft="@dimen/dp_37"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@id/txt_kck"
                android:text="活动课"
                android:textColor="@color/cl_231304"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/img_zhuanyedz"
                android:layout_width="@dimen/dp_37"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_32"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_toRightOf="@id/img_huodongke"
                android:src="@mipmap/zhuanyedingzhi" />

            <TextView
                android:id="@+id/txt_zyd"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_14"
                android:layout_below="@id/img_huodongke"
                android:layout_marginLeft="@dimen/dp_34"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@id/txt_hdk"
                android:text="专业定制"
                android:textColor="@color/cl_231304"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:id="@+id/img_dashike"
                android:layout_width="@dimen/dp_37"
                android:layout_height="@dimen/dp_37"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_toRightOf="@id/img_zhuanyedz"
                android:src="@mipmap/dashike" />

            <TextView
                android:id="@+id/txt_dsk"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_14"
                android:layout_below="@id/img_huodongke"
                android:layout_marginLeft="@dimen/dp_31"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toRightOf="@id/txt_zyd"
                android:text="大师课"
                android:textColor="@color/cl_231304"
                android:textSize="@dimen/sp_10" />

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_below="@id/rl_course1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_29"
            android:orientation="horizontal">

            <View
                android:layout_width="4dp"
                android:layout_height="@dimen/dp_21"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="@drawable/shape_mine_img" />

            <TextView
                android:layout_width="@dimen/dp_72"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="推荐课程"
                android:textColor="@color/cl_333333"
                android:textSize="@dimen/sp_18" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rlv_course"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</RelativeLayout>