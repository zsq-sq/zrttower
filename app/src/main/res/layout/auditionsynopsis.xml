<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f8f8f8"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/dp_180">

        <ImageView
            android:id="@+id/audition_synopsis_headimg"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_16" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_90"
            android:src="@mipmap/icon_synopsis_play_num" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_74"
            android:layout_marginTop="@dimen/dp_90"
            android:src="@mipmap/icon_synopsis_comment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_120"
            android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/audition_synopsis_like"
    android:layout_width="@dimen/dp_44"
    android:src="@mipmap/icon_synopsis_like"
    android:layout_height="@dimen/dp_44"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="点赞"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_four"
        android:layout_height="@dimen/dp_17"/>
</LinearLayout>

  <LinearLayout
      android:orientation="vertical"
    android:layout_width="@dimen/dp_0"
      android:gravity="center"
   android:layout_weight="1"
    android:layout_height="match_parent">
      <ImageView
        android:id="@+id/audition_synopsis_shoucang"
          android:layout_width="@dimen/dp_44"
          android:src="@mipmap/icon_synopsis_"
          android:layout_height="@dimen/dp_44"/>
      <TextView
          android:layout_width="wrap_content"
          android:text="收藏"
          android:textSize="@dimen/sp_12"
          android:textColor="@color/text_four"
          android:layout_height="@dimen/dp_17"/>
</LinearLayout>

  <LinearLayout
      android:orientation="vertical"
    android:layout_width="@dimen/dp_0"
      android:gravity="center"
    android:layout_weight="1"
    android:layout_height="match_parent">
      <ImageView
          android:id="@+id/audition_synopsis_share"
          android:layout_width="@dimen/dp_44"
          android:src="@mipmap/icon_synopsis_share"
          android:layout_height="@dimen/dp_44"/>
      <TextView
          android:layout_width="wrap_content"
          android:text="分享"
          android:textSize="@dimen/sp_12"
          android:textColor="@color/text_four"
          android:layout_height="@dimen/dp_17"/>
</LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/audition_synopsis_name"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_72"
            android:layout_marginTop="@dimen/dp_15"
            android:text="教师名"
            android:textColor="@color/text_goldRing"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/audition_synopsis_attention"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/shape_submit"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/synopsis_cuser_name"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_60"
            android:text="课程名称"
            android:textColor="@color/text_four"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/audition_synopsis_play_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_90"
            android:text="999"
            android:textColor="@color/cl_dae1e0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/audition_synopsis_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_90"
            android:text="999"
            android:textColor="@color/cl_dae1e0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/audition_synopsis_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_marginRight="@dimen/dp_16"
            android:text="2020/06/02"
            android:textColor="@color/cl_dae1e0"
            android:textSize="12sp" />
    </RelativeLayout>

    <!--   内容  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_height="@dimen/dp_157">

        <TextView
            android:layout_width="@dimen/dp_72"
            android:textColor="@color/text_four"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:text="内容名字"
            android:layout_height="@dimen/dp_25"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/audition_synopsis_neirong_rlv"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="@dimen/dp_100"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="@dimen/dp_72"
        android:textColor="@color/text_four"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="相关推荐"
        android:layout_height="@dimen/dp_25"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/audition_synopsis_tuijian_rlv"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="wrap_content"/>

</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:background="@mipmap/icon_synopsis_share"
        android:layout_height="@dimen/dp_200"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>