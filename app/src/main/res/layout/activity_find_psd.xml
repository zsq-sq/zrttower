<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetPsdActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.arttower.design.CommonTitle
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backImage="@drawable/back_icon"
            app:canBack="true"
            app:titleText="找回密码" />

        <ImageView
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_96"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_34"
            android:src="@drawable/tingwu"
             />

        <EditText
            android:id="@+id/find_et_psd"
            android:layout_width="@dimen/dp_298"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_34"
            android:background="@drawable/shape_login_edit"
            android:hint="请输入您要设置的密码"
            android:paddingLeft="@dimen/dp_15"
            android:textColor="@color/black"
            android:textColorHint="@color/cl_e4e1de"
            android:textSize="@dimen/sp_17" />

        <EditText
            android:id="@+id/find_et_confirm_psd"
            android:layout_width="@dimen/dp_298"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_34"
            android:background="@drawable/shape_login_edit"
            android:hint="请再次输入密码"
            android:paddingLeft="@dimen/dp_15"
            android:textColor="@color/black"
            android:textColorHint="@color/cl_e4e1de" />

        <Button
            android:id="@+id/find_set_psd_submit"
            android:layout_width="@dimen/dp_298"
            android:layout_height="@dimen/dp_42"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_92"
            android:background="@drawable/shape_submit"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_16"
            android:text="登录即代表同意"
            android:textColor="@color/cl_ffe4e1de"
            android:textSize="@dimen/sp_12"
            android:layout_marginLeft="@dimen/dp_68"
            />
        <TextView
            android:id="@+id/protocol"
            android:layout_width="@dimen/dp_72"
            android:layout_height="@dimen/dp_16"
            android:text="《用户协议》"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_16"
            android:text="和"
            android:textColor="@color/cl_ffe4e1de"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/policy"
            android:layout_width="72dp"
            android:layout_height="@dimen/dp_16"
            android:text="《隐私政策》"
            android:textColor="@color/app_theme_color"
            android:textSize="@dimen/sp_12"
            />
    </LinearLayout>
    
    
</RelativeLayout>