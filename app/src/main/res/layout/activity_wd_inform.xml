<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WdInformActivity">
<com.example.arttower.design.CommonTitle
    android:id="@+id/title_wdInform"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:titleText="消息通知"
    app:canBack="true"
    app:backImage="@drawable/back_icon"
    app:moreImg="@mipmap/ic_more"
    />
    <com.androidkun.xtablayout.XTabLayout
        android:id="@+id/tab_wdInform"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_below="@id/title_wdInform"
        android:background="@color/white"
        app:xTabIndicatorColor="@color/app_theme_color"
        app:xTabIndicatorHeight="@dimen/dp_2"
        app:xTabSelectedTextColor="@color/app_theme_color"
        app:xTabSelectedTextSize="@dimen/sp_14"
        app:xTabTextColor="@color/black"
        app:xTabTextSize="@dimen/sp_14" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_wdInform"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab_wdInform" />
</RelativeLayout>