<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:layout_alignParentBottom="true"
        android:background="@color/cl_f8f8f8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toRightOf="@id/attention_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/attention_jiahao"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/yesattention" />

        <TextView
            android:id="@+id/attention_jiaguanzhu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_14"
            android:layout_marginTop="@dimen/dp_1"
            android:gravity="center"
            android:text="已关注"
            android:textColor="@color/cl_ff7b00"
            android:textSize="@dimen/sp_8" />
    </LinearLayout>


    <TextView
        android:id="@+id/attention_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@id/attention_head"
        android:text="长安与君识"
        android:textColor="@color/cl_231304" />

    <TextView
        android:id="@+id/attention_content"
        android:layout_width="@dimen/dp_251"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/attention_name"
        android:layout_marginLeft="@dimen/dp_56"
        android:layout_marginTop="@dimen/dp_0"
        android:lines="1"
        android:singleLine="true"
        android:text="保持微笑，保持热忱，好运始终会与你相遇"
        android:textColor="@color/cl_c2c0be"
        android:textSize="@dimen/sp_9" />

    <com.example.arttower.design.RoundOrCircleImage
        android:id="@+id/attention_head"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:src="@mipmap/kechenghejizhanweitu" />
</RelativeLayout>