<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_104"
    android:layout_marginLeft="@dimen/dp_16"
    android:layout_marginRight="@dimen/dp_16">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_96"
        android:background="@drawable/shape_course"

        >

        <ImageView
            android:id="@+id/collection_img"
            android:layout_width="@dimen/dp_142"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:src="@mipmap/pgpgpgpp" />

        <TextView
            android:id="@+id/collection_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@id/collection_img"
            android:text="课程名称"
            android:textColor="@color/cl_4d4c4b"
            android:textSize="@dimen/sp_18" />

        <ImageView
            android:id="@+id/collection_head"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/collection_name"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_toRightOf="@id/collection_img"
            android:src="@drawable/touxiang" />

        <TextView
            android:id="@+id/collection_username"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_22"
            android:layout_below="@id/collection_name"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/collection_head"
            android:text="长安与君识"
            android:textColor="@color/cl_4d4c4b"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_8"
        android:layout_alignParentBottom="true"
        android:background="@color/cl_f4f4f4" />
</RelativeLayout>